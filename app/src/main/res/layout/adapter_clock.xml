<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_favorite_country"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_margin="8dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_day"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@id/tv_favorite_country_time"
        android:layout_toRightOf="@id/tv_favorite_country"
        android:layout_toStartOf="@id/tv_favorite_country_time"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_favorite_country_time"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>